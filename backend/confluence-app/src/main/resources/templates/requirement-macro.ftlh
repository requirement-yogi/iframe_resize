<#-- This directive removes extra whitespace -->
<@compress single_line=true>
  <a href="${url!"#"}">
    <span style="
      display: inline;
      border: 1px solid #0052cc;
      width: fit-content;
      padding: 5px;
      border-radius: 5px;
      white-space: nowrap;
    ">
      ${key}
    </span>
  </a>
</@compress>
